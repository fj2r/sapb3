
{# extension du template layout pour le template principal #}

{% extends "layout_bundle.twig" %}


{% block identifiants %}{{parent()}}{% endblock %}

{% block title %}{{parent()}}Accueil{% endblock %}
{% block cadre_haut %}
        {% block chapeau_haut %}{{parent()}}{% endblock %}
        {% block menuUtilisateur %}
            {{parent()}}
            
        {% endblock %}
        {% block chapeau_bas %}{{parent()}}{% endblock %}
    
{% endblock %}

{% block contenu %}
    {% block panneauGauche %}{{parent()}}{%endblock%}   
    {% block panneauDroite %}
        {% block panneauDroiteFirstchild%} {{parent()}} {% endblock %}
            {% block article %}
                {% block articleFirstChild %}
                    {% if connecte == TRUE %}
                        <div class="liste_profs">
                    {{listeProfs}} {{classe}}: <br />
                    <ul>
                        {% for list in listeProfesseurs if list.matiere != 'TUTORAT' %}
                        <li> {{list.nomComplet}} <i>({{list.matiere}})</i> </li>
                    {% endfor %}
                    </ul>
                </div>
                <div class="tuteurs">
                    {{tuteurs}} : <br />
                     <ul>
                    {% for list in listeProfesseurs if list.matiere=='TUTORAT' %}
                        <li> {{list.nomComplet}} <i>({{list.matiere}})</i> </li>
                    {% endfor %}
                    </ul>
                </div>
                <div class ="lien_notes">
                    
                </div>
                <div class="voeuxParent">
                    {{labelnbVoeux}} : {{nbVoeux}} 
                        {% if nbVoeux < nbVoeuxMax %}
                            <i>(il reste {{nbVoeuxMax - nbVoeux}} voeu{% if (nbVoeuxMax - nbVoeux)>1 %}x{%endif%} possible{% if (nbVoeuxMax - nbVoeux)>1 %}s{%endif%})</i>
                        {% endif %}
                    <br />
                    {% if nbVoeux == 0%}{{nbVoeuxNull}}. <br />
                    {% else %} 
                        {% include 'tableauVoeux.twig' %}
                    
                    {%endif%}
                    
                    {% if nbVoeux < nbVoeuxMax %}
                        <div class=''>
                    <p><a href="orientation.php?statut={{statut}}" >{{labelLien1}}</a></p>
                   
                        </div>
                    {% endif %}
                </div>
                    {%endif%}
                    {% block article_alt%}
                    {% if connecte == FALSE %}
                        {%include 'loginFalse.twig'%}
                    
                    {%endif%}
                {%endblock%}
                {%endblock%}{{parent()}}
                
                
            {% endblock %}
        {% block panneauDroiteSecondchild %} {{parent()}} {% endblock %}    
    {% endblock %}
    
{%endblock%}

{% block footer %}{{parent()}}<hr />{% endblock %}